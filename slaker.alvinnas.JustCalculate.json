{
    "app-id": "slaker.alvinnas.JustCalculate",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "justcalculate",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "justcalculate",
            "buildsystem": "simple",
            "build-commands": [
                "install -D justcalculate.sh /app/bin/justcalculate",
                "install -D main.py /app/share/justcalculate/main.py",
                "install -D style.css /app/share/justcalculate/style.css"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "justcalculate.sh"
                },
                {
                    "type": "file",
                    "path": "main.py"
                },
                {
                    "type": "file",
                    "path": "style.css"
                }
            ]
        }
    ]
}